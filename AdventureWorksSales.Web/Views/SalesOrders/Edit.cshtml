@model AdventureWorksSales.Core.Data.SalesOrder

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SalesOrder</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SalesOrderID)

        @Html.HiddenFor(model => model.SalesOrderDetailID)

        <div class="form-group">
            @Html.LabelFor(model => model.CarrierTrackingNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CarrierTrackingNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CarrierTrackingNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.OrderQty)

        @Html.HiddenFor(model => model.ProductID)

        @Html.HiddenFor(model => model.SpecialOfferID)

        @Html.HiddenFor(model => model.UnitPrice)

        @Html.HiddenFor(model => model.UnitPriceDiscount)

        @Html.HiddenFor(model => model.LineTotal)

        @Html.HiddenFor(model => model.rowguid)

        @Html.HiddenFor(model => model.ModifiedDate)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
